{
  "extends": "tsconfig",
  "declaration": true,
  "emitDeclarationOnly": true,
  "declarationMap": true,
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
  },
  "include": ["index.ts"]
}
